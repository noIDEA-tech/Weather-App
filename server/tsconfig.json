{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",        // Different from root - needed for Node.js
    "moduleResolution": "node",  // Different from root - needed for Node.js
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
